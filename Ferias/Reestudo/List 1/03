pares = 0
impares = 0
somap = 0
somai = 0

x = int(input('digite um numero inteiro: '))

while x != 0:
    if x % 2 == 0:
        pares += 1
        somap += x
    else:
        impares += 1
        somai += x

    x = int(input('digite um numero inteiro: '))

    if x == 0:
        mediap = somap/pares
        break

print(f'numeros pares: {pares}')
print(f'numeros impares: {impares}')
print(f'media dos numeros pares: {mediap}')
