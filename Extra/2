print('Qual o seu nome?')
nome=input()
print('Olá, ', nome, '.')
print('Quantos anos você tem?')
anos=input()
print(f'Você, {nome}, tem {anos} anos.')
print(f'Você, {nome}, nasceu em {2022 - int(anos)}.')
print('Qual o ano de hoje?')
data=input()
print(f'Fazem, {2022 - int(data)} anos que eu fui criado.')
